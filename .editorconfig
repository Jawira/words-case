root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
ij_visual_guides = 80, 120

[*.php]
indent_size = 4

[*.{yml, yaml, neon, xml, svg, json, js}]
indent_size = 2

[*.{md, markdown}]
trim_trailing_whitespace = false
indent_size = 2
max_line_length = 80
